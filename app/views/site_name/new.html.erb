<div class="center jumbotron">
  <h1>Get your site!</h1>
  <h2>
    Enter your desired site name below and let the button do its magic
  </h2>
    <%= form_for (@site_name), url: {action: "instantiate", controller: "site_name"}, html: {method: "post"} do |f| %>
        <%= render 'shared/error_messages' %>
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>

        <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
</div>
